<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/top_color">
        <TextView
            android:id="@+id/tvMainCup"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/top_cup_normal"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tvMainTitle"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:background="@mipmap/baisibudejie"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvMainRotate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/top_rotate"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvMainRandom"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="23dp"
            android:background="@mipmap/top_random_normal"
            />

    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tlMainActivity"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabTextAppearance="@style/tabTextAppearance"
        app:tabTextColor="@color/gray_i"
        app:tabSelectedTextColor="@color/gray_i"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        android:background="@color/top_color"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpMainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@color/white">
    </android.support.v4.view.ViewPager>

</LinearLayout>